@{
    ViewData["Title"] = "Home Page";
}
@if (!string.IsNullOrEmpty(TempData["message"]?.ToString()))
{
    <div class="alert alert-danger" style="text-align:center">
        @TempData["message"]
    </div>
}
<div class="wrapper">
    <form action="/Home/Result" method="post">
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th style="text-align:center" rowspan="2">Номер агрегата</th>
                        <th style="text-align:center" rowspan="2">Потребности агрегатов в топливе, т</th>
                        <th style="text-align:center" colspan="3">Теплотворная способность различных топлив при использовании его на агрегатах, МДж/т топлива</th>
                    </tr>
                    <tr>
                        <td style="text-align:center">Топливо 1</td>
                        <td style="text-align:center">Топливо 2</td>
                        <td style="text-align:center">Топливо 3</td>
                    </tr>
                </thead>
                <tr>
                    <td style="text-align:center">1</td>
                    <td style="text-align:center"><input type="number" min="0" name="T1" value="80" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A1T1" value="4" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A1T2" value="5" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A1T3" value="10" /></td>
                </tr>
                <tr>
                    <td style="text-align:center">2</td>
                    <td style="text-align:center"><input type="number" min="0" name="T2" value="90" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A2T1" value="3" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A2T2" value="5" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A2T3" value="3" /></td>
                </tr>
                <tr>
                    <td style="text-align:center">3</td>
                    <td style="text-align:center"><input type="number" min="0" name="T3" value="70" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A3T1" value="12" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A3T2" value="14" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A3T3" value="15" /></td>
                </tr>
                <tr>
                    <td style="text-align:center">4</td>
                    <td style="text-align:center"><input type="number" min="0" name="T4" value="50" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A4T1" value="12" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A4T2" value="5" /></td>
                    <td style="text-align:center"><input type="number" min="0" name="A4T3" value="6" /></td>
                </tr>
            </table>
            <p></p>
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align:center">Название топлива</th>
                        <th style="text-align:center">Ограничения имеющиеся в наличии топливные ресурсы,МДж/т</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align:center">Топливо 1</td>
                        <td style="text-align:center"><input type="number" min="0" name="resource1" value="140" /></td>
                    </tr>
                    <tr>
                        <td style="text-align:center">Топливо 2</td>
                        <td style="text-align:center"><input type="number" min="0" name="resource2" value="160" /></td>
                    </tr>
                    <tr>
                        <td style="text-align:center">Топливо 3</td>
                        <td style="text-align:center"><input type="number" min="0" name="resource3" value="100" /></td>
                    </tr>
                </tbody>
            </table>

        </div>
        <button class="sumbit" type="submit">Рассчитать</button>
    </form>
</div>
